<link rel="stylesheet" href="~/css/views/Doors.css">

<div class="header-view">
    <h1 class="text-2xl font-bold dark:text-white title-view-text">@ViewData["Title"]</h1>
</div>

<!-- Contenedor principal -->
<div class="stations-grid" style="display: flex; flex-wrap: wrap; gap: 20px;">

    @foreach (var estacion in estaciones)
    {
        // Asignar bgColorClass fuera del ciclo for
        string bgColorClass;

        if (estacion.Estado == 1)
        {
            bgColorClass = "bg-orange";
        }
        else if (estacion.Estado == 2)
        {
            bgColorClass = "bg-green";
        }
        else if (estacion.Estado == 3)
        {
            bgColorClass = "bg-lightblue";
        }
        else
        {
            bgColorClass = "bg-transparent";
        }

        <div class="station">
            <h2 class="text-lg font-semibold">@estacion.Id - @estacion.Nombre</h2>
            <table>
                <thead>
                    <tr>
                        <th>WA</th>
                        <th></th>
                        <th>WB</th>
                        <th></th>
                        <th>WC</th>
                        <th></th>
                    </tr>
                    <tr>
                        <th>OR</th>
                        <th>OC</th>
                        <th>OR</th>
                        <th>OC</th>
                        <th>OR</th>
                        <th>OC</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 1; i <= 5; i++)
                    {
                        <tr class="@bgColorClass">
                            <td>@i</td>
                            <td>@i</td>
                            <td>@i</td>
                            <td>@i</td>
                            <td>@i</td>
                            <td>@i</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
